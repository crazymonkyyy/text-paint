int radial(Vector2 i,Vector2 o){
	import std;
	return ((atan2(o.y-i.y,o.x-i.x)+3.14)/(6.28/16)).to!int;
}
void main(){
	InitWindow(windowx, windowy, "Hello, Raylib-D!");
	SetWindowPosition(2000,0);
	SetTargetFPS(60);
	while (!WindowShouldClose()){
		BeginDrawing();
			ClearBackground(Colors.BLACK);
			foreach(x;0..151){
			foreach(y;0..151){
				DrawPixel(x,y,colors[radial(Vector2(x,y),Vector2(75,75))%16]);
			}}
